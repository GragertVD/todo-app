{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "ignorePatterns": [
    "public/*",
    "node_modules/*",
    "build/*"
  ],
  "rules": {
    "no-console": "warn",
    "prefer-const": "error",
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "warn",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 150
      }
    ]
  }
}